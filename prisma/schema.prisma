generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id
  name      String
  email     String    @unique
  pass      String
  tasks     Task[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

enum Status {
  FINISHED
  UNFINISHED
}

model Task {
  id        String    @id
  title     String
  status    Status    @default(UNFINISHED)
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  deadline  DateTime
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}
